---
import { getUserFromCookie, getFlashError } from "../session";

const user = getUserFromCookie(Astro.cookies);
const flashError = getFlashError(Astro.cookies);
const redirectTo = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ByB</title>
  </head>
  <body>
    <header>
      <a href="/" class="logo">ByB</a>
      {
        user ? (
          <form action="/api/logout" method="POST" style="margin: 0;">
            <button type="submit" class="logout-button">
              Log out
            </button>
          </form>
        ) : (
          ""
        )
      }
    </header>
    <main>
      {
        flashError ? (
          <div class="flash-error">
            <form method="POST" action="/api/clear-flash-error">
              <button>&times;</button>
              <input type="hidden" name="redirect-to" value={redirectTo} />
            </form>
            <p>{flashError}</p>
          </div>
        ) : null
      }
      <slot />
    </main>
  </body>
</html>
